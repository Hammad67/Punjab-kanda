

<h1>Send Messages</h1>

<table>
  <thead>
    <tr>
      <th>Srial number</th>
      <th>Vehicle number</th>
      <th>Product</th>
      <th>Weight type</th>
      <th>First weight</th>
      <th>Second weight</th>
      <th>Net weight</th>
      <th>Cash</th>
      <th>Party</th>
      <th>Driver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @send_messages.each do |send_message| %>
      <tr>
        <td><%= send_message.srial_number %></td>
        <td><%= send_message.vehicle_number %></td>
        <td><%= send_message.product %></td>
        <td><%= send_message.weight_type %></td>
        <td><%= send_message.first_weight %></td>
        <td><%= send_message.second_weight %></td>
        <td><%= send_message.net_weight %></td>
        <td><%= send_message.cash %></td>
        <td><%= send_message.party_id %></td>
        <td><%= send_message.driver_id %></td>
        <td><%= link_to 'Show', send_message %></td>
        <td><%= link_to 'Edit', edit_send_message_path(send_message) %></td>
        <td><%= link_to 'Destroy', send_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Send Message', new_send_message_path %>
